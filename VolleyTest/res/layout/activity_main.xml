<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button
        android:id="@+id/send_http_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Http Request" />
    
    <Button
        android:id="@+id/send_json_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send JSON Request" />
    
    <Button 
        android:id="@+id/send_citycode_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send CityCode Request" />
    
    <Button 
        android:id="@+id/load_citycode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Load CityCode File" />
    
    <Button 
        android:id="@+id/query_citycode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Query CityCode" />"
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <TextView 
            android:id="@+id/response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
    </ScrollView>
    
</LinearLayout>
        

